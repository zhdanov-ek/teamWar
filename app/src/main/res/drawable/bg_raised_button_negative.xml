<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="@dimen/button_radius"
                />
            <size
                android:width="@dimen/button_raised_width"
                android:height="@dimen/button_raised_height"
                />
            <solid android:color="@color/colorButtonRaisedBackgroundPressNegative" />

            <stroke
                android:width="@dimen/button_stroke_width"
                android:color="@color/colorButtonRaisedBackgroundPress" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="@dimen/button_radius"
                />
            <size
                android:width="@dimen/button_raised_width"
                android:height="@dimen/button_raised_height"
                />
            <solid android:color="@android:color/transparent" />

            <stroke
                android:width="@dimen/button_stroke_width"
                android:color="@color/colorButtonRaisedBackgroundFocus" />
        </shape>
    </item>

    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="@dimen/button_radius"
                />
            <size
                android:width="@dimen/button_raised_width"
                android:height="@dimen/button_raised_height"
                />
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="@dimen/button_stroke_width"
                android:color="@color/colorButtonRaisedBackground" />
        </shape>
    </item>
</selector>